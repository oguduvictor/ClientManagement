@using ClientManagement.Web.Helpers
@model ClientManagement.Core.ViewModels.AssignProjectViewModel
@{
    ViewBag.Title = "Assign Project";
}
<div class="container">
    <h2>Assign Project To @ViewBag.Employee.FirstName @ViewBag.Employee.LastName</h2>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="form-group">
                <input type="text" name="EmployeeId" value="@ViewBag.employee.Id" hidden />
                @Html.Label("Project Title", htmlAttributes: new { @class = "control-label" })
                @Html.DropDownList("ProjectId", ViewHelper.GetProjectsList(), htmlAttributes: new { @class = "form-control col-md-8"})
                @Html.ValidationMessageFor(model => model.ProjectId, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    }
</div>