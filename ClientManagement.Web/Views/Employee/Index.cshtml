@model IEnumerable<ClientManagement.Core.Models.Employee>

@{
    ViewBag.Title = "Employees List";
}

<h2>List Of All Registered Employees</h2>
<div class="table-responsive">
    <table class="table table-striped">
        <tr>
            <th>
                @Html.DisplayName("First Name")
            </th>
            <th>
                @Html.DisplayName("Last Name")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Projects)
            </th>
            <th>
                @Html.Display("Actions")
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    @Html.ListBox("Id", new SelectList(item.Projects, "Id", "Title"), new { @class = "form-control" })
                </td>
                <td>
                    @Html.ActionLink("View Projects", "EmployeeProjects", new { id = item.Id }) |
                    @Html.ActionLink("Assign Project", "AssignProject", new { id = item.Id })
                </td>
            </tr>
        }
    </table>
</div>